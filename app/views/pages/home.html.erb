<div class="theme_select">
  <h5>Theme For %= @theme.date %</h5>
  <h1>"<%= @theme_of_the_month.name %>!"</h1>
  <%= form_tag(root_url, :method => :get) do -%>
<% if @theme_id.present?%>
  <%= select_tag :theme_id, options_from_collection_for_select(Theme.order("name"), :id, :name,@theme_id)%>
<% else %>
  <%= select_tag :theme_id, options_from_collection_for_select(Theme.order("name"), :id, :name), :prompt => "See Previous Themes"%>
<% end %>
  <%= submit_tag 'Filter' %>
  <%= link_to 'clear', root_url %>
<% end %>
</div>

<div id="attachments">
<% @array_of_last_updated_attachment_per_classroom_by_theme_id.each do |attachment| %>
  <ul>
    <h3>
      <%= link_to attachment.classroom.name, classroom_url(attachment.classroom.id) %>
    </h3>
    <h3>
      (<%= link_to attachment.region.name, region_url(attachment.region.id) %>)
    </h3>
    <li>
      <%= link_to image_tag(attachment.thumbnail_url), attachment_url(attachment.id) %>
      <h5>
        <%= attachment.title %>
      </h5>
    </li>
  </ul>
<% end %>
</div>

