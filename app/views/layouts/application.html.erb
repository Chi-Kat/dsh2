<!DOCTYPE html>
<html>
<head>
  <title>Dsh2</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<nav>

		<!-- Links for all -->
		<%= link_to "Digital Schoolhouse", root_url %>
		<%= link_to "About Us", about_url %>
		
		<!-- Link for facilitator/admin -->
		<% if logged_in? %>
			 | 
			<% if current_user.type == "Admin" %>
				<%= link_to "Admin Panel", admin_url %>
			<% elsif current_user.type == "Facilitator"%>
				<%= link_to "Facilitator Panel", facilitator_url %>
			<% end %>
		<% end %>
		 | 
		<!-- Log in / Log out  -->
		
		<% if logged_in? %>
			<%= link_to "Logout", sessions_url, :method => :delete %>
		<% else %>
			<%= link_to "Login", new_sessions_url %>
			|
			<%= link_to "Join", new_applicant_url %>
		<% end %>


	</nav>
			

<%= yield %>

</body>
</html>
