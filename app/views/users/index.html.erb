<h1>All users</h1>

<ul>
<% @users.each do |user| %>
  
    <li>
    Name: <%= user.name %><br>
   <!--  Email: <%#= user.email %><br> -->
    Type: <%= user.type %><br>
    <%if user.type == "Facilitator" %>
    	Classroom: <%= user.classroom.name %><br>
  	<%end%>
    <%= link_to 'Show', user %> |
    <%= link_to 'Edit', edit_user_path(user) %> |
    <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></li>
<% end %>
</ul>

<br />

<%= link_to 'New User', new_user_path %>
