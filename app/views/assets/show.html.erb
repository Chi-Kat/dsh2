<p id="notice"><%= notice %></p>

<p>
  <b>Theme:</b>
  <%= @asset.theme.name %>
</p>

<p>
  <b>Classroom:</b>
  <%= @asset.classroom.name %>
</p>

<p>
  <b>Title:</b>
  <%= @asset.title %>
</p>

<p>
  <b>Description:</b>
  <%= @asset.description %>
</p>

<p>
  <b>Contributors:</b>
  <%= @asset.contributors %>
</p>

<div id = "assets">
  <% if @asset.image? %>
    <%= image_tag @asset.image_url.to_s %>
  <%else%>
    <iframe width="560" height="315" src="http://www.youtube.com/embed/<%=shorten(@asset.youtube_url)%>" frameborder="0" allowfullscreen></iframe>
  <%end%>
</div>


<%= link_to 'Edit', edit_asset_path(@asset) %> |
<%= link_to 'Back', assets_path %>
