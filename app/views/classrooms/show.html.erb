<p id="notice"><%= notice %></p>

<p>   
	<div>
	    <% @classroom.users.each do |user| %>
	   <h1><%= user.name%>'s Classroom -
	    <%end%>
	   <%= @classroom.name %>,
     <%= @classroom.region.name %></h1>
     <p>Stats<%= @classroom.stat %></p>
     <p>Description<%= @classroom.description %></p>
 </div>
</p>

<div id = "assets">
  <% @classroom.assets.each do |asset| %>
  <div class = "asset">
    <%if asset.image.present? %>
	    <a href = "<%= asset_path(asset)%>"> <%= image_tag asset.image_url(:thumb).to_s %></a>
			<div class = "title"><%=asset.title %> </div>
    <%else%>
	    <%= link_to image_tag("youtube.png", :width => "200"), asset_path(asset) %>
    <%end%>
    <div class = "actions">
      <%= link_to "edit", edit_asset_path(asset) %> 
      <%= link_to "remove", asset, :confirm => 'Are you sure?', :method => :delete %>
    </div>
  </div>
  <%end%>
  <div class = "clear"></div>
</div>

<%= link_to 'Edit', edit_classroom_path(@classroom) %> |
<%= link_to 'Back', classrooms_path %>
