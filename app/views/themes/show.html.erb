<p id="notice"><%= notice %></p>

<p>
  <%= @theme.name %>
</p>

<div id = "attachments">
  <% @theme.attachments.each do |attachment| %>
  <div class = "attachment">
    <%if attachment.image.present? %>
	    <a href = "<%= attachment_path(attachment)%>"> <%= image_tag attachment.image_url(:thumb).to_s %></a>
			<div class = "user_name"><%=attachment.user_id %>'s classroom </div>
			<div class = "region_name">(<%=attachment.classroom.region.name %>) </div>
    <%else%>
	    <%= link_to image_tag("youtube.png", :width => "200"), attachment_path(attachment) %>
    <%end%>
    <div class = "actions">
      <%= link_to "edit", edit_attachment_path(attachment) %> 
      <%= link_to "remove", attachment, :confirm => 'Are you sure?', :method => :delete %>
    </div>
  </div>
  <%end%>
  <div class = "clear"></div>

</div>

<%= link_to 'Back', themes_path %>
