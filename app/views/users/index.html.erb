<h1>Listing users</h1>

<ul>
<% @users.each do |user| %>
  
    <li>Classroom: <%= user.classroom.name %><br>
    Name: <%= user.name %><br>
   <!--  Email: <%#= user.email %><br> -->
    Role: <%= user.role %><br>
    <%= link_to 'Show', user %> |
    <%= link_to 'Edit', edit_user_path(user) %> |
    <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></li>
<% end %>
</ul>

