<h1>Listing regions</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @regions.each do |region| %>
  <tr>
    <td><%= region.name %></td>
    <td><%= link_to 'Show', region %></td>
    <td><%if current_user.present? && current_user.admin? %>
      <td><%= link_to 'Edit', edit_region_path(region) %></td>
      <td><%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' } %><%end%></td>
  </tr>
<% end %>
</table>

<br />
