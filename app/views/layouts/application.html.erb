<!DOCTYPE html>
<html>
<head>
  <title>Dsh2</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<nav>


		<%= link_to "Digital Schoolhouse", root_url %>
		<%= link_to "About Us", about_url %>
		
			
			<% if logged_in? %>
				Hello <%= current_user.name %>
						<%if current_user.role == "Admin"%>
						<%= link_to "Admin Panel", admin_url %>
				<%end%>
					<%if current_user.role == "Teacher"%>
						<%= link_to "Teacher Panel", teacher_url %>
					<% end %>
					<ul>
						<li><%= link_to "View My Profile", user_url(current_user) %></li>
						<li><%= link_to "Sign Out", sessions_url, :method => :delete %></li>
				<% else %>
						<li><%= link_to "Sign In", new_sessions_url %></li>
						<li><%= link_to "Sign Up", new_user_url  %>
					</ul>
			<% end %>

	</nav>
			

<%= yield %>

</body>
</html>
